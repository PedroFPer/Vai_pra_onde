<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teste1"
    android:descendantFocusability="afterDescendants"
    tools:conhint=".Geral.TelasFront.TelaCadastroEvento">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/branco"
            >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/logofundotrans" />

            <EditText
                android:id="@+id/nome_evento_cad"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:textSize="10pt"
                android:background="@drawable/caixaperfil1"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:padding="10dp"
                android:fontFamily="monospace"
                android:hint="Nome do evento"
                android:imeOptions="actionNext"
                android:inputType="text"/>
        </LinearLayout>

        <!-- Segundo LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            >

            <ImageView

                android:layout_width="380dp"

                android:layout_height="200dp"

                android:src="@drawable/default_foto"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"

            android:background="@drawable/conteiner"
            android:orientation="vertical"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"> <!-- Orientação vertical para melhor empilhamento -->

                    <TextView
                        android:id="@+id/nome_da_empresa_cad"
                        android:layout_width="300dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:padding="10dp"
                        android:hint="Nome da Empresa"
                        android:textColor="@color/black"
                        android:textColorHint="@color/dark_gray"
                        android:background="@drawable/caixa"
                        android:textSize="8pt" />

                    <!-- Adicione mais elementos aqui, se necessário -->

                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/descricao_cad"
                        android:layout_width="290dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:gravity="top|start"
                        android:padding="20dp"
                        android:paddingVertical="100dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/dark_gray"
                        android:hint="Descrição"
                        android:background="@drawable/caixa" />

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/data_ano_cad"
                    android:layout_width="60dp"
                    android:textColor="@color/black"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:textColorHint="@color/dark_gray"
                    android:inputType="number"
                    android:hint="Ano"
                    android:background="@drawable/caixa"
                    android:textSize="8pt"
                    android:imeOptions="actionNext"/>
                <EditText
                    android:id="@+id/data_mes_cad"
                    android:layout_width="60dp"
                    android:textColor="@color/black"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:textColorHint="@color/dark_gray"
                    android:textAlignment="center"
                    android:hint="Mês"
                    android:inputType="number"
                    android:background="@drawable/caixa"

                    android:textSize="8pt"
                    android:imeOptions="actionNext"/>
                <EditText
                    android:id="@+id/data_dia_cad"
                    android:layout_width="60dp"
                    android:textColor="@color/black"
                    android:layout_height="48dp"
                    android:layout_marginLeft="15dp"
                    android:textColorHint="@color/dark_gray"
                    android:layout_marginTop="15dp"
                    android:textAlignment="center"
                    android:hint="Dia"
                    android:inputType="number"
                    android:background="@drawable/caixa"

                    android:textSize="8pt"
                    android:imeOptions="actionNext"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/horario_evento_cad_hora"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:textColorHint="@color/dark_gray"
                    android:textAlignment="center"
                    android:background="@drawable/caixa"
                    android:padding="10dp"
                    android:inputType="number"
                    android:hint="Hora"

                    android:imeOptions="actionNext"
                    android:textSize="8pt" />
                <EditText
                    android:id="@+id/horario_do_evento_cad_min"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/dark_gray"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:padding="12dp"
                    android:background="@drawable/caixa"
                    android:hint="Minuto"
                    android:textSize="8pt"
                    android:imeOptions="actionNext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/Email_cad"
                    android:layout_width="300dp"
                    android:textColor="@color/black"
                    android:layout_height="48dp"
                    android:padding="10dp"
                    android:textColorHint="@color/dark_gray"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"

                    android:hint="Email"
                    android:background="@drawable/caixa"
                    android:textSize="8pt"
                    android:imeOptions="actionNext"/>

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/endereco_cidade_cad"
                    android:layout_width="100dp"
                    android:textColor="@color/black"
                    android:layout_height="48dp"
                    android:paddingHorizontal="18dp"
                    android:textColorHint="@color/dark_gray"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="Cidade"
                    android:background="@drawable/caixa"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="8pt"
                    android:layout_marginBottom="15dp"
                    />
                <EditText
                    android:id="@+id/endereco_bairro_cad"
                    android:layout_width="100dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dark_gray"
                    android:layout_height="48dp"
                    android:paddingHorizontal="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:hint="Bairro"
                    android:background="@drawable/caixa"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="8pt"
                    android:layout_marginBottom="15dp"
                    />
                <EditText
                    android:id="@+id/endereco_logradouro_cad"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:textColor="@color/black"
                    android:paddingHorizontal="18dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:textColorHint="@color/dark_gray"
                    android:layout_marginRight="15dp"
                    android:hint="Rua"
                    android:background="@drawable/caixa"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textSize="8pt"

                    />

            </LinearLayout>
            <TextView
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:id="@+id/telefone_cad"
                android:layout_width="300dp"
                android:layout_height="38dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:textColorHint="@color/dark_gray"
                android:hint="Telefone"
                android:background="@drawable/caixa"
                android:imeOptions="actionDone"
                android:textSize="8pt"
                android:layout_marginBottom="15dp"/>


        </LinearLayout>
        <Button
            android:id="@+id/BtnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/burnt_orange"
            android:text="Criar Evento"
            android:textColor="@color/white"
            android:padding="20dp"

            android:textSize="8pt"

            />

    </LinearLayout>

</ScrollView>