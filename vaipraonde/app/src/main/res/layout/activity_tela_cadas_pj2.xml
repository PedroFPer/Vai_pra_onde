<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/TextInicio"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:fontFamily="sans-serif-black"
        android:text="Nós fale um pouco sobre o representante!"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextCadNomResPj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite o nome completo do represetante da sua empresa"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintTop_toTopOf="@+id/TextInicio"
        app:layout_constraintBottom_toBottomOf="@+id/CadasNomeResPj"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/CadasNomeResPj"
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:text="João da silva"
        android:background="@drawable/caixa"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/TextCadNomResPj"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/TextCadCpfResPj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite o cpf do responsável"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintTop_toTopOf="@+id/CadasNomeResPj"
        app:layout_constraintBottom_toBottomOf="@+id/CadasCpfResPj"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/CadasCpfResPj"
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:text="00000000000"
        android:background="@drawable/caixa"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/TextCadCpfResPj"
        app:layout_constraintStart_toStartOf="parent"
        />


    <Button
        android:id="@+id/BotaoCadas1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Proxima pagina ->"
        android:textColor="@color/white"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/burnt_orange"
        />



</androidx.constraintlayout.widget.ConstraintLayout>