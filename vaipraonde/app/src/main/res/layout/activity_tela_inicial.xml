<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teste1">

<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <ImageView
        android:id="@+id/TextInicio"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logofundotrans"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />



    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="350dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/conteiner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/light_gray"
        />



    <EditText
        android:id="@+id/textLogin"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginTop="340dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/caixa"
        android:padding="12dp"
        android:textColor="@color/dark_gray"
        android:text="Email"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TextInicio" />




    <EditText
        android:id="@+id/textSenha"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginTop="95dp"
        android:layout_marginHorizontal="60dp"
        android:background="@drawable/caixa"
        android:padding="12dp"
        android:textColor="@color/dark_gray"
        android:text="Senha"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textLogin" />

    <Button
        android:id="@+id/BotaoLogin"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/burnt_orange"
        android:text="Login"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textSenha"
        tools:layout_editor_absoluteY="660dp"
        />


    <Button
        android:id="@+id/BotaoCadas"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/burnt_orange"
        android:text="Cadastrar-se"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toTopOf="@+id/BotaoLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>