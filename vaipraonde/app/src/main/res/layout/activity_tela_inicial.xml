
<androidx.core.widget.NestedScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/teste1">

<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >




    <ImageView
        android:id="@+id/TextView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logofundotrans"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="2dp"
        />

    <TextView
        android:id="@+id/TextInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:fontFamily="sans-serif-black"
        android:text="Vamos descobrir novos eventos?"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.684"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="3dp"

        />



    <View
        android:layout_width="340dp"
        android:layout_height="300dp"
        android:layout_marginTop="400dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/conteiner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/light_gray"
        />

    <EditText
        android:id="@+id/textLogin"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/caixa"
        android:padding="12dp"
        android:hint="Email"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:imeOptions="actionNext"
        android:inputType="text"
        />


    <EditText
        android:id="@+id/textSenha"
        android:textColor="@color/black"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="530dp"
        android:background="@drawable/caixa"
        android:padding="12dp"
        android:hint="Senha"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:imeOptions="actionDone"
        android:inputType="text"
        />

    <Button
        android:id="@+id/BotaoLoginIni"
        android:layout_width="180dp"
        android:layout_height="60dp"

        android:text="Login"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toTopOf="@+id/textSenha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:backgroundTint="@color/burnt_orange"
        />

    <Button
        android:id="@+id/BotaoCadas"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/burnt_orange"
        android:text="Cadastrar-se"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="95dp"
        app:layout_constraintTop_toTopOf="@+id/BotaoLoginIni"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>