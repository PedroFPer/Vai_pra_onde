<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teste1">

<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <ImageView
        android:id="@+id/TextInicio"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logofundotrans"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />



    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="350dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/conteiner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/light_gray"
        />


    <Button
        android:id="@+id/BotaoLoginPF"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:text="Login para pessos fisicas"
        android:layout_marginTop="380dp"
        app:layout_constraintTop_toTopOf="@+id/TextInicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:backgroundTint="@color/burnt_orange"
        />

    <Button
        android:id="@+id/BotaoLoginPJ"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:text="Login para Empresas"
        android:layout_marginTop="500dp"
        app:layout_constraintTop_toTopOf="@+id/TextInicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:backgroundTint="@color/burnt_orange"
        />



    <Button
        android:id="@+id/BotaoCadas"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar-se"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toTopOf="@+id/BotaoLoginPJ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/burnt_orange"
        android:textColor="@color/white"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>