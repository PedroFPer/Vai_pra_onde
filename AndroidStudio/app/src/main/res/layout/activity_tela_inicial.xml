<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teste1">
    >



    <ImageView
        android:id="@+id/TextInicio"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logofundotrans"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />



    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="420dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/conteiner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="470dp"
        android:background="@drawable/caixa"
        android:padding="20dp"
        android:hint="E-mail"
        android:textSize="20sp"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/caixa"
        android:padding="20dp"
        android:hint="Senha"
        android:textSize="20sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/BotaoCadas"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar-se"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="@+id/BotaoLoginIni"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/orange"
        />

    <Button
        android:id="@+id/BotaoLoginIni"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:text="Login"
        android:layout_marginTop="600dp"
        app:layout_constraintTop_toTopOf="@+id/TextInicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/orange"
        />


</androidx.constraintlayout.widget.ConstraintLayout>