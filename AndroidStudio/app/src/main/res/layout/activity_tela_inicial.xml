<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teste1">
    >



    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logofundotrans"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/BotaoLoginIni"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="@+id/BotaoCadas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/burnt_orange"
        />

    <Button
        android:id="@+id/BotaoCadas"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Cadastro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/burnt_orange"
        />


</androidx.constraintlayout.widget.ConstraintLayout>