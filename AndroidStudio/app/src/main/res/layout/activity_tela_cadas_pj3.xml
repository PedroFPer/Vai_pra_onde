<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/TextInicio3"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:text="Qual a sede da sua empresa?"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"/>

    <TextView
        android:id="@+id/TextCadLogrPj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logradouro"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintTop_toTopOf="@+id/TextInicio3"
        app:layout_constraintBottom_toBottomOf="@+id/CadasLogrPj"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/CadasLogrPj"
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:text="Rua, Galeria"
        android:background="@drawable/caixa"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/TextCadLogrPj"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/TextCadBairrPj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bairro"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintTop_toTopOf="@+id/CadasLogrPj"
        app:layout_constraintBottom_toBottomOf="@+id/CadasBairrPj"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/CadasBairrPj"
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:text="Queimadinha"
        android:background="@drawable/caixa"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/TextCadBairrPj"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/TextCadCidadePj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cidade:"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintTop_toTopOf="@+id/CadasBairrPj"
        app:layout_constraintBottom_toBottomOf="@+id/CadasCidadesPj"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/CadasCidadesPj"
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:text="Feira de Santana"
        android:background="@drawable/caixa"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/TextCadCidadePj"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/TextCadasEstaPj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado:"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintTop_toTopOf="@+id/CadasCidadesPj"
        app:layout_constraintBottom_toBottomOf="@+id/CadasEstaPj"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/CadasEstaPj"
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:text="Bahia"
        android:background="@drawable/caixa"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/TextCadasEstaPj"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/TextCadasPaisPj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pais"
        android:fontFamily="sans-serif-condensed"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintTop_toTopOf="@+id/CadasEstaPj"
        app:layout_constraintBottom_toBottomOf="@+id/CadasPaisPj"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/CadasPaisPj"
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:text="Brasil"
        android:background="@drawable/caixa"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@+id/TextCadasPaisPj"
        app:layout_constraintStart_toStartOf="parent"
        />


    <Button
        android:id="@+id/BotaoCadas1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Proxima pagina ->"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/burnt_orange"
        />



</androidx.constraintlayout.widget.ConstraintLayout>