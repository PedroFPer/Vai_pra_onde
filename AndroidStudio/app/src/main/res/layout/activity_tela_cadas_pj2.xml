<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/TextInicio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Nós fale um pouco sobre o representante!,"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TextCadNomResPj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite o nome completo do represetante da sua empresa"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintTop_toTopOf="@+id/TextInicio"
        app:layout_constraintBottom_toBottomOf="@+id/CadasNomeResPj"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/CadasNomeResPj"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="João da silva"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="@+id/TextCadNomResPj"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/TextCadCpfResPj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite o cpf do responsável"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="45dp"
        app:layout_constraintTop_toTopOf="@+id/CadasNomeResPj"
        app:layout_constraintBottom_toBottomOf="@+id/CadasCpfResPj"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/CadasCpfResPj"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="00000000000"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="@+id/TextCadCpfResPj"
        app:layout_constraintStart_toStartOf="parent"
        />


    <Button
        android:id="@+id/BotaoCadas1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Proxima pagina ->"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="@+id/CadasCpfResPj"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>